<div class="card shadow-sm h-100 mb-3">
  <div class="card-body p-3">

    <h6 class="fw-bold mb-3">
      Beslenme Özeti:
    </h6>

    <div class="row g-2 text-center mb-3">

      <div class="col-6 col-md-3">
        <div class="border rounded p-2">
          <div class="fw-semibold">Kal</div>
          <div><%= @food_item.kcal %></div>
        </div>
      </div>

      <div class="col-6 col-md-3">
        <div class="border rounded p-2">
          <div class="fw-semibold">Yağ</div>
          <div><%= @food_item.fat %> g</div>
        </div>
      </div>

      <div class="col-6 col-md-3">
        <div class="border rounded p-2">
          <div class="fw-semibold">Karb</div>
          <div><%= @food_item.carbs %> g</div>
        </div>
      </div>

      <div class="col-6 col-md-3">
        <div class="border rounded p-2">
          <div class="fw-semibold">Prot</div>
          <div><%= @food_item.protein %> g</div>
        </div>
      </div>

    </div>

    <p class="mb-1">
      <%= @food_item.name %> içinde <%= @food_item.kcal %> kalori mevcut.
    </p>

  </div>
</div>

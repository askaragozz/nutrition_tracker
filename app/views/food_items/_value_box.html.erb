<div class="card shadow-sm h-100">
  <div class="card-body p-3">

    <!-- Title -->
    <h5 class="fw-bold mb-3 border-bottom pb-2">
      Nutrition Values
    </h5>

    <!-- Serving Size -->
    <div class="d-flex justify-content-between fw-semibold mb-2">
      <span>Serving Size</span>
      <span>100 g</span>
    </div>

    <hr class="my-2">

    <!-- Per Portion Label -->
    <div class="text-end small fw-semibold mb-2">
      Per Portion
    </div>

    <!-- Energy -->
    <div class="d-flex justify-content-between">
      <span class="fw-semibold">Enerji</span>
      <span>
        <%= @food_item.kj.round(2) %> kJ<br>
        <%= @food_item.kcal %> kcal
      </span>
    </div>

    <hr class="my-2">

    <!-- Fat -->
    <div class="d-flex justify-content-between">
      <span class="fw-semibold">Fat</span>
      <span class="fw-semibold"><%= @food_item.fat %> g</span>
    </div>

    <div class="d-flex justify-content-between ps-3 small">
      <span>Saturated Fat</span>
      <span>To be added</span>
    </div>

    <div class="d-flex justify-content-between ps-3 small">
      <span>Monounsaturated Fat</span>
      <span>to be added</span>
    </div>

    <div class="d-flex justify-content-between ps-3 small mb-2">
      <span>Polyunsaturated Fat</span>
      <span>To be added</span>
    </div>

    <hr class="my-2">

    <!-- Carbs -->
    <div class="d-flex justify-content-between">
      <span class="fw-semibold">Carbohydrates</span>
      <span class="fw-semibold"><%= @food_item.carbs %> g</span>
    </div>

    <div class="d-flex justify-content-between ps-3 small">
      <span>Sugar</span>
      <span>to be added</span>
    </div>

    <div class="d-flex justify-content-between ps-3 small mb-2">
      <span>Fiber</span>
      <span>to be added</span>
    </div>

    <hr class="my-2">

    <!-- Protein -->
    <div class="d-flex justify-content-between fw-semibold">
      <span>Protein</span>
      <span><%= @food_item.protein %> g</span>
    </div>

    <hr class="my-2">

    <!-- Minerals -->
    <div class="d-flex justify-content-between small">
      <span>Sodyum</span>
      <span>378 mg</span>
    </div>

    <div class="d-flex justify-content-between small">
      <span>Kolesterol</span>
      <span>68 mg</span>
    </div>

    <div class="d-flex justify-content-between small">
      <span>Potasyum</span>
      <span>342 mg</span>
    </div>

  </div>
</div>

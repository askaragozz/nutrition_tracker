<h1>Foods</h1>



<%= turbo_frame_tag "foods_list" do %>
  <% @foods.each do |food| %>
    <h5><%= link_to food.name, food_path(food) %></h5>
    <span><strong>Calories:</strong> <%= food.calories %> |</span>
    <span><strong>Fat:</strong> <%= food.fat %>g |</span>
    <span><strong>Carbs:</strong> <%= food.carbs %>g |</span>
    <span><strong>Prot:</strong> <%= food.protein %>g</span>
  <% end %>

  <% if @foods.empty? %>
    <p>No foods found.</p>
  <% end %>

<% end %> 
